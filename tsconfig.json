{
  "compilerOptions": {
    "target": "es6",
    "allowJs": true,
    "checkJs": true,
    "moduleResolution": "node",
    "alwaysStrict": true,
    "strictNullChecks": false,
    "emitDeclarationOnly": true,
    "declaration": true,
    "outDir": "types",
    "removeComments": false
  },
  "files": ["vue-shim.d.ts", "src/index.js"],
  "include": ["src/**/*.js", "src/**/*.vue"],
  "exclude": ["__tests__", "node_modules", "node_modules/**/*", "types"]
}
